## Alias - short for "at another time or place".

# List files.
alias ls='lsd'
alias l='ls -l'
alias la='ls -a'
alias lla='ls -la'
alias lt='ls --tree'

# Show disk usage.
alias df='df -h'
alias du='du -c -h'

# Jumping around directories.
alias back='cd $OLDPWD'

# Very short aliases for most used commands.
alias n="nvim"
alias t="tmux"
alias o="open"
